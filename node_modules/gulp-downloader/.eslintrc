{
  "extends": "airbnb",
  "env": {
    "node": true
  },
  "globals": {
    "describe": true,
    "it": true,
    "before": true,
    "after": true
  },
  "rules": {
    "no-var": 0,
    "comma-dangle": [2, "never"],
    "spaced-line-comment": 0,
    "no-space-before-semi": 0,
    "space-after-function-name": 0,
    "semi-spacing": [2, { "before": false, "after": true }],
    "no-param-reassign": 0
  }
}
